<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="karans.s15.hibernate.domain.Book" table="tbl_book">
      <id name="id" type="int" column="col_id">
         <generator class="native"/>
      </id>
      <property name="name" column="col_name" type="string"/>
      <property name="author" column="col_author" type="string"/>
   </class>
</hibernate-mapping>